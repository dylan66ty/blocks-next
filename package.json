{
  "name": "blocks-next",
  "version": "1.0.1-alpha.30",
  "description": "一个更加『轻量』和『快速』的基于 Vue3 组件库",
  "workspaces": [
    "packages",
    "docs",
    "effect",
    "build"
  ],
  "author": "dylan66ty",
  "license": "MIT",
  "scripts": {
    "create-comp1": "bash ./script/template.sh",
    "clean": "rimraf ./dist",
    "dev": "pnpm run -C effect dev",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "log": "conventional-changelog -p cmyr-config -i CHANGELOG.md -s -r 0",
    "type:web": "vue-tsc -p tsconfig.web.json --composite false --noEmit",
    "type:effect": "vue-tsc -p tsconfig.effect.json --composite false --noEmit",
    "type:node": "tsc -p tsconfig.node.json --composite false --noEmit",
    "docs:dev": "pnpm run -C docs dev",
    "docs:build": "pnpm run -C docs build",
    "docs:serve": "pnpm run -C docs serve",
    "build": "pnpm run -C build build",
    "lint:eslint": "eslint . --fix",
    "lint:prettier": "prettier --write --loglevel warn .",
    "lint:stylelint": "stylelint --fix \"**/*.{vue,less,postcss,css,scss}\" --cache --cache-location node_modules/.cache/stylelint/",
    "lint:staged": "lint-staged",
    "cz": "czg",
    "prepare": "husky install",
    "release": "bump package.json packages/package.json docs/package.json",
    "generator-webtypes": "tsc -p build/generator-types/tsconfig.json && node build/generator-types/index.js"
  },
  "devDependencies": {
    "@dylan66ty/commitlint-config": "^0.0.1",
    "@dylan66ty/eslint-config-vue": "^0.0.6",
    "@dylan66ty/prettier-config": "^0.0.2",
    "@dylan66ty/stylelint-config": "^0.0.5",
    "@jsdevtools/version-bump-prompt": "^6.1.0",
    "@types/node": "*",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitejs/plugin-vue-jsx": "^3.0.0",
    "@vitest/coverage-c8": "^0.28.5",
    "@vue/test-utils": "^2.2.10",
    "consola": "^2.15.3",
    "conventional-changelog-cli": "^2.2.2",
    "czg": "^1.4.1",
    "eslint": "^8.33.0",
    "fast-glob": "^3.2.12",
    "husky": "^8.0.3",
    "jsdom": "^21.1.0",
    "lint-staged": "^13.1.0",
    "postcss": "^8.4.21",
    "postcss-html": "^1.5.0",
    "postcss-import": "^15.1.0",
    "postcss-pxtorem": "^6.0.0",
    "prettier": "2.8.3",
    "sass": "^1.58.0",
    "stylelint": "^15.8.0",
    "typescript": "^4.9.5",
    "unplugin-vue-macros": "^0.11.2",
    "vitest": "^0.28.5",
    "vue": "^3.2.47",
    "vue-tsc": "^1.0.24"
  },
  "peerDependencyRules": {
    "ignoreMissing": [
      "vite"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "rollup",
        "source-map-*",
        "stable",
        "uuid",
        "vite*",
        "urix"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": [
      "eslint --fix"
    ],
    "*.{scss,html}": [
      "stylelint --fix"
    ]
  }
}
